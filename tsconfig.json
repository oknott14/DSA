{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist/typescript",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true
	},
	"include": ["typescript/**/*.ts"],
	"exclude": ["node_modules"]
}
